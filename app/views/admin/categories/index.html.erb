<br>
<div class="row">
  <div class="col-md-8">
    <table id="category_list_table" class="table table-hover table-bordered">
      <tbody>
        <tr>
          <th><%= t("category").capitalize %></th>
          <th><%= t("description").capitalize %></th>
          <th><%= t("num_of_words").capitalize %></th>
          <th><%= t("tool").capitalize %></th>
        </tr>
        <%= render @categories %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <div>
      <%= form_for [:admin, @category], remote: true, class: "form form-inline" do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <%= f.submit t("done"), class: "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
</div>
